{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
